<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- Property Placeholder -->
    <context:property-placeholder
        location="classpath:/properties/config.properties,
            file:${CATALINA_HOME}/portal/overrides.properties,
            file:${PORTAL_HOME}/overrides.properties"
        ignore-resource-not-found="true" />
              
    <!-- JSP view resolver -->
    <bean id="viewResolver"
        class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="cache" value="true" />
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
        <property name="prefix" value="/WEB-INF/" />
        <property name="suffix" value=".jsp" />
        <property name="order" value="10" />
    </bean>

    <!-- CAS Proxy -->
    <bean name="casProxyFilter" class="org.jasig.cas.client.validation.Cas20ProxyReceivingTicketValidationFilter">
        <property name="service" value="${org.jasig.portal.protocol}://${org.jasig.portal.server}${org.jasig.portlet.context}" />
        <property name="redirectAfterValidation" value="false" />
        <property name="proxyReceptorUrl" value="/CasProxyReceptor" />
        <property name="ticketValidator" ref="ticketValidator" />
        <property name="proxyGrantingTicketStorage" ref="pgtStorage" />
    </bean>

    <bean id="ticketValidator" class="org.jasig.cas.client.validation.Cas20ProxyTicketValidator">
        <constructor-arg index="0" value="${org.jasig.cas.url}" />
        <property name="proxyCallbackUrl" value="${org.jasig.portal.real.protocol}://${org.jasig.portal.real.server}${org.jasig.portlet.context}/CasProxyReceptor" />
        <property name="acceptAnyProxy" value="true" />
        <property name="proxyGrantingTicketStorage" ref="pgtStorage" />
    </bean>
 
    <bean name="casTicketService" class="fr.unistra.di.metier.dip.ent.portal.portlets.aboutiframe.CasTicketService">
        <property name="casLoginUrl" value="${org.jasig.cas.login}" />
        <property name="serviceUrl" value="${org.jasig.portal.protocol}://${org.jasig.portal.server}${org.jasig.portlet.context}" />
        <property name="ticketValidator" ref="ticketValidator" />
    </bean>

    <bean name="pgtStorage" class="org.jasig.cas.client.proxy.ProxyGrantingTicketStorageImpl" />

</beans>
