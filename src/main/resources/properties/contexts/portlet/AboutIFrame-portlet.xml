<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    
    <bean id="portletModeHandlerMapping"
        class="org.springframework.web.portlet.handler.PortletModeHandlerMapping">
        <property name="interceptors">
            <bean class="org.jasig.web.portlet.handler.MinimizedStateHandlerInterceptor" />
        </property>
        <property name="portletModeMap">
            <map>
                <entry key="view"><ref bean="viewHandler" /></entry>
                <entry key="about"><ref bean="viewHandler" /></entry>
                <entry key="help"><ref bean="viewHandler" /></entry>
            </map>
        </property>
    </bean>
    <bean id="viewHandler" class="fr.unistra.di.metier.dip.ent.portal.portlets.aboutiframe.AboutIFramePortletController"/>

    <!--
     | Message source for this context, loaded from localized "messages_xx" files
     +-->
    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="alwaysUseMessageFormat" value="true" />
        <property name="cacheSeconds" value="60" />
        <property name="useCodeAsDefaultMessage" value="true" />
        <property name="defaultEncoding" value="UTF-8" />
        <property name="basenames">
            <list>
                <value>/WEB-INF/jsp/IFrame/aboutIframePortlet</value>
            </list>
        </property>
    </bean>
    
</beans>
