<channelDef>

  <description>
    This is a channel for rendering web content inside an internal frame.
  </description>

  <class>org.jasig.portal.channels.CInlineFrame</class>

  <params>
    <step>
      <ID>1</ID>

      <name>Inline frame parameters</name>

      <description>
        Enter the URL of the page you want to render in an
        inline frame.  Be aware that inline frames are not supported in some
        browsers, in which case this channel will render a link to open the
        page in a new window.
      </description>

      <parameter modify="publish-only">
        <name>url</name>
        <label>URL</label>
        <type base="string" input="text" display="text">
          <length>40</length>
          <maxlength>2000</maxlength>
        </type>
        <example>http://www.udel.edu/uPortal</example>
      </parameter>

      <parameter modify="publish">
        <name>height</name>
        <label>Frame Height (pixels)</label>
        <type base="integer" input="text" display="text">
          <length>3</length>
          <maxlength>4</maxlength>
        </type>
        <defaultValue>600</defaultValue>
      </parameter>

    </step>

    <step>
      <ID>2</ID>
      <name>Display Settings</name>
      <description>
        These options influence how your Portlet is displayed within the portal
      </description>

        <parameter modify="publish-only">
            <name>showChrome</name>
            <label>Show Portlet Window Chrome</label>
            <type base="string" input="single-choice" display="drop-down">
                <restriction type="enumeration">
                    <value>true</value>
                    <value>false</value>
                </restriction>
            </type>
            <defaultValue>true</defaultValue>
        </parameter>

        <parameter modify="publish-only">
            <name>alternate</name>
            <label>Use 'Alternate' Appearance (Theme Dependent)</label>
            <type base="string" input="single-choice" display="drop-down">
                <restriction type="enumeration">
                    <value>false</value>
                    <value>true</value>
                </restriction>
            </type>
            <defaultValue>false</defaultValue>
        </parameter>

        <parameter modify="publish-only">
            <name>highlight</name>
            <label>Use Highlighted Appearance</label>
            <type base="string" input="single-choice" display="drop-down">
                <restriction type="enumeration">
                    <value>false</value>
                    <value>true</value>
                </restriction>
            </type>
            <defaultValue>false</defaultValue>
        </parameter>

    </step>

  </params>

  <controls>
    <control type="edit" include="no" override="no"/>
    <control type="about" include="no" override="no"/>
    <control type="help" include="no" override="no"/>
  </controls>

</channelDef>
